<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_4x2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:ignore="HardcodedText,SpUsage" >

    <!-- 底板 -->

    <ImageView
        android:id="@+id/skin_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/skin_background" />

    <LinearLayout
        android:id="@+id/wrather"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/skin_background"
        android:layout_alignTop="@id/skin_background"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/layout_left"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.51"
            android:gravity="center" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <LinearLayout
                    android:id="@+id/skin_temp_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/skin_temp_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/skin_temp_minus" />

                    <ImageView
                        android:id="@+id/skin_temp_tens"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/skin_temp_1" />

                    <ImageView
                        android:id="@+id/skin_temp_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/skin_temp_8" />

                    <ImageView
                        android:id="@+id/skin_temp_degree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:src="@drawable/skin_temp_degree" />
                </LinearLayout>

                <TextView
                    android:id="@+id/skin_feeltemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/skin_temp_layout"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/skin_feeltemp"
                    android:visibility="gone"
                    android:textColor="@color/textcolor"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/skin_city_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/skin_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingEnd="4dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="4dp"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/skin_city"
                    android:textColor="@color/textcolor" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_back" />
            </LinearLayout>

            <ImageView
                android:id="@+id/skin_flower"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@drawable/skin_flower_0" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_right"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/skin_weather_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.72"
                android:contentDescription="@null"
                android:src="@drawable/skin_weather_0" />

            <LinearLayout
                android:id="@+id/skin_time_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.28"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/skin_time_hour_tens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_time_1" />

                <ImageView
                    android:id="@+id/skin_time_hour_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_time_1" />

                <ImageView
                    android:id="@+id/skin_time_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_time_colon" />

                <ImageView
                    android:id="@+id/skin_time_minute_tens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_time_1" />

                <ImageView
                    android:id="@+id/skin_time_minute_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_time_1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>